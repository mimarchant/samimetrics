---
import Chart from "../icons/chart.astro";
import Keychain from "../icons/keychain.astro";
import User from "../icons/user.astro";
---

<section
  class="flex flex-col lg:flex-row justify-center items-center py-10 lg:px-20"
>
  <img
    src="samilogo-planeta-samimetrics-el.webp"
    class="xs:m-auto lg:mr-8 lg:w-[283px] lg:h-[45px]"
    alt=""
  />
  <div
    class="flex p-2 flex-col items-center lg:flex-row gap-y-6 gap-x-10 cursor-pointer mt-4 lg:mt-0"
  >
    <span
      class="item-container flex flex-col items-center justify-center hover:scale-105 transition-transform"
    >
      <Chart class="logo-item" />
      <span class="text-[lightgray] font-semibold"> FUNCIONALIDADES </span>
    </span>

    <span
      class="item-container flex flex-col items-center justify-center hover:scale-105 transition-transform"
    >
      <Keychain class="logo-item" />
      <span class="text-[lightgray] font-semibold">
        <a href="/users/sign_in">INICIAR SESIÃ“N</a>
      </span>
    </span>

    <span
      class="item-container flex flex-col items-center justify-center hover:scale-105 transition-transform"
    >
      <User class="logo-item" />
      <span class="text-[lightgray] font-semibold">
        <a href="#my-form">CONTACTO</a>
      </span>
    </span>
  </div>
</section>

<style>
  .logo-item {
    color: lightgrey;
  }

  .item-container:hover {
    text-decoration: underline;
    text-decoration-color: lightgrey;
  }

  html {
    scroll-behavior: smooth;
  }
</style>
